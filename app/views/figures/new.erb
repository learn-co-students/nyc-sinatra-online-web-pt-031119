<h3>Create New Historical Figure</h3>

<form method="POST" action="/figures">

    <label for="figure_name">Name</label>
    <input type="text" name="figure[name]" id="figure_name">
    <br>
    
    <h4>Titles:</h4>

    <% Title.all.each do |title| %>
        <p><%= title.name %><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"></p>
    <% end %>

    <h4>Create New Title:</h4>

    <input type="text" name="title[name]" id="new_title">
    <br>
    
     
    <h4>Landmarks:</h4>

    <% Landmark.all.each do |landmark| %>
        <p><%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"></p>
    <% end %>

    <h4>Create New Landmark:</h4>

    <label for="new_landmark">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="new_year_completed">Year:</label> 
    <input type="text" name="landmark[year_completed]" id="new_year_completed"> 

    <button type="submit" value="Create New Figure">Create New Figure</button>

</form>