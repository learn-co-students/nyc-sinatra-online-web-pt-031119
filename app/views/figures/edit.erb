<h3>Edit Historical Figure</h3>

<form method="POST" action="/figures/<%= @figure.id %>">
<input type="hidden" name="_method" value="patch" id="hidden">

    <label for="figure_name">Name</label>
    <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
    <br>

    <h4>Titles:</h4>

    <% Title.all.each do |title| %>
        <p><%= title.name %><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>></p>
    <% end %>

    <h4>Add New Title:</h4>

    <input type="text" name="title[name]" id="new_title">
    <br>

    <h4>Landmarks:</h4>
  
    <% Landmark.all.each do |landmark| %>
        <p><%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>></p>
    <% end %>
    <br>

    <h4>Add New Landmark:</h4>

    <label for="new_landmark">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="new_year_completed">Year: </label>
    <input type="text" name="landmark[year_completed]" id="new_year_completed">

    <input type="submit" value="Edit Figure">

</form>